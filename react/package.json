{
  "name": "@tilia/react",
  "version": "0.0.0",
  "homepage": "https://tiliajs.com",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiliajs/tilia.git"
  },
  "scripts": {
    "res:build": "rescript",
    "res:dev-build": "rescript",
    "res:clean": "rescript clean",
    "res:dev": "rescript watch",
    "test:watch": "vitest",
    "clean": "rm -rf dist && rm -rf lib && rm -f *.tgz",
    "build": "node esbuild.js",
    "prebuild": "pnpm clean && rescript",
    "prepack": "pnpm build && clean-package",
    "postpack": "clean-package restore",
    "pretest": "pnpm res:build",
    "test": "vitest run"
  },
  "description": "üçÉ React State Management with Tilia.",
  "keywords": [
    "state management",
    "domain-driven",
    "reactive",
    "typescript",
    "rescript",
    "frp",
    "react",
    "hooks",
    "computed",
    "minimal",
    "simple"
  ],
  "author": "Gaspard Anna Bucher <g.a.bucher@midasum.com>",
  "license": "MIT",
  "peerDependencies": {
    "react": "*"
  },
  "dependencies": {
    "tilia": "workspace:^"
  },
  "devDependencies": {
    "@rescript/react": "^0.14.0",
    "@rescript/runtime": "^12.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.5.2",
    "ava": "5.2.0",
    "clean-package": "^2.2.0",
    "esbuild": "^0.25.5",
    "esbuild-node-externals": "^1.18.0",
    "global-jsdom": "^26.0.0",
    "jsdom": "^26.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rescript": "^12.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3",
    "vitest-bdd": "1.0.0-beta.20251218T132423"
  },
  "ava": {
    "files": [
      "test/*_test.mjs",
      "test/**/*_test.mjs"
    ]
  },
  "clean-package": {
    "remove": [
      "scripts",
      "devDependencies",
      "ava",
      "clean-package"
    ]
  }
}
