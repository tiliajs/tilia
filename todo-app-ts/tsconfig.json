{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@entity/*": [
        "src/domain/api/entity/*.type"
      ],
      "@feature/*": [
        "./src/domain/api/feature/*.type"
      ],
      "@service/*": [
        "src/domain/api/service/*.type"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "src/*": [
        "src/*"
      ],
    },
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src"
  ]
}